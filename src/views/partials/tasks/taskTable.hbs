<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
           <th>No. Registro</th>
           <th>Nombre</th>
           <th>Descripción</th>
           <th>Tipo de patología</th>
           <th>Origen/Causa</th>
           <th>Existe Tratamiento</th>
           <th>Modificar Registro</th>
        </tr>
    </thead>

    <tbody>
{{#each tasks}}
<tr>
    <td>{{@index}}</td>
    <td>{{title}}</td>
    <td>{{description}}</td>
    <td>{{description1}}</td>
    <td>{{description2}}</td>
    <td>{{description3}}</td>
    <td>
        {{#if done}}
            <a href="/toggleDone/{{_id}}" class="btn btn-sm btn-warning">Pendiente</a>
        {{else}}
            <a href="/toggleDone/{{_id}}" class="btn btn-sm btn-success">Listo</a>
        {{/if}}
        <a href="/delete/{{_id}}" class="btn btn-sm btn-danger">Eliminar</a>
        <a href="/edit/{{_id}}" class="btn btn-sm btn-primary">Actualizar</a>
    </td>
</tr>
{{/each}}
    </tbody>
</table>

